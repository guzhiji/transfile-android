<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConfigActivity" android:orientation="vertical">

    <TextView
            android:text="设备名称"
            android:labelFor="@id/configDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/configDeviceName"/>

    <TextView
            android:text="多播组地址"
            android:labelFor="@id/configGroupAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:text="224.0.0.255"
            android:id="@+id/configGroupAddr" />

    <TextView
            android:text="接收文件夹"
            android:labelFor="@id/configDir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/configDir" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="确定"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/configSaveButton"
                android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>