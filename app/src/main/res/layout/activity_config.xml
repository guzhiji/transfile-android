<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConfigActivity" android:orientation="vertical">

    <TextView
            android:text="@string/config_field_device_name"
            android:labelFor="@id/configDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/configDeviceName"/>

    <TextView
            android:text="@string/config_field_group_addr"
            android:labelFor="@id/configGroupAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:text="224.0.0.255"
            android:id="@+id/configGroupAddr" />

    <TextView
            android:text="@string/config_field_receiving_dir"
            android:labelFor="@id/configDir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/configDir" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="@string/button_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/configSaveButton"
                android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>